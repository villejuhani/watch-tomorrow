{
  "name": "Watch Tomorrow",
  "version": "0.0.0.1",
  "manifest_version": 3,
  "description": "Add a Youtube video to the Watch Later playlist and watch it tomorrow at the earliest. Prevent instant watching.",
  "action": {
    "default_title": "Watch Tomorrow"
  },
  "permissions": ["storage", "tabs", "webNavigation"],
  "host_permissions": ["https://www.youtube.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "run_at": "document_end",
      "js": [
        "watch_later_storage.js",
        "watch_later_scraper.js"
      ]
    }
  ]
}
